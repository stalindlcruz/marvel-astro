---
import MiniLogoComponent from "./MiniLogoComponent.astro";
---

<style>
  .row-subscribe {
    height: 52px;
  }

  .col-subscribe {
    height: 52px;
    border-right: 1px solid #393939;
  }

  .col-search {
    height: 52px;
    /* border-left: 1px solid #393939; */
  }

  .a-subscribe,
  .a-search {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    text-decoration: none;
    color: #fff;
    cursor: pointer;
  }

  .a-subscribe {
    /* padding-left: 20px; */
    gap: 10px;
  }

  .text-marvel {
    text-align: center;
    line-height: 1;
  }

  .text-marvel p {
    font-size: 12px;
    font-weight: 400;
    letter-spacing: 1px;
    margin: 0;
  }

  .text-marvel span {
    position: relative;
    top: 5px;
    font-size: 10px;
    letter-spacing: 2px;
    margin: 0;
    font-weight: 400;
    display: block;
  }

  .bi-search {
    font-size: 20px;
  }
</style>

<div class="row align-items-center row-subscribe">
  <div
    class="col-lg-10 d-none d-lg-block d-flex align-items-center col-subscribe"
  >
    <a
      href="https://www.marvel.com/unlimited?cid=dcom_navigation_20210331_unlimited_top"
      class="a-subscribe"
    >
      <MiniLogoComponent />
      <div class="text-marvel">
        <p>MARVEL UNLIMITED</p>
        <span>SUBSCRIBE</span>
      </div>
    </a>
  </div>

  <div
    class="col-lg-2 d-none d-lg-block d-flex justify-content-center align-items-center col-search"
  >
    <a
      href="https://www.marvel.com/search"
      class="a-search d-flex justify-content-center align-items-center"
    >
      <i class="bi bi-search"></i>
    </a>
  </div>
</div>
